<Window x:Class="ProyectoIker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ProyectoIker"
        mc:Ignorable="d"
        Title="Seker"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- MENÚ LATERAL -->
        <StackPanel Grid.Column="0" Background="#263238">
            <TextBlock Text="Seker"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>

            <Separator Background="#455A64" Margin="10"/>

            <!-- PRODUCTOS -->
            <Expander Header="Productos" Foreground="White" Margin="10" Background="Transparent">
                <StackPanel>
                    <Button Content="Listar productos"
                            Click="UCProductos_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                    <Button Content="Añadir producto" x:Name="btnAnyadirProducto" Click="btnAnyadirProducto_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                </StackPanel>
            </Expander>

            <!-- EMPLEADOS -->
            <Expander Header="Empleados" Foreground="White" Margin="10" Background="Transparent">
                <StackPanel>
                    <Button Content="Listar empleados"
                            Click="UCEmpleados_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                    <Button Content="Añadir empleado"
                            Click="btnAnyadirEmpleado_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                </StackPanel>
            </Expander>

            <!-- REPARACIONES -->
            <Expander Header="Reparaciones" Foreground="White" Margin="10" Background="Transparent">
                <StackPanel>
                    <Button Content="Listar reparaciones"
                            Click="UCReparaciones_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                    <Button Content="Añadir reparación"
                            Click="btnAnyadirReparacion_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                </StackPanel>
            </Expander>

            <!-- PROMOCIONES -->
            <Expander Header="Promociones" Foreground="White" Margin="10" Background="Transparent">
                <StackPanel>
                    <Button Content="Listar promociones"
                            Click="UCPromociones_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                    <Button Content="Añadir promoción"
                            Click="btnAnyadirPromocion_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="White"/>
                </StackPanel>
            </Expander>
        </StackPanel>

        <!-- CONTENIDO PRINCIPAL -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Grid.Row="0"
                        HorizontalAlignment="Right">
                <TextBlock
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#212121"
                           Margin="0,0,10,0">
                    <Run Text="Bienvenido " />
                </TextBlock>
                <materialDesign:PackIcon Kind="AccountCircle"
                                         Width="30"
                                         Height="30"
                                         Foreground="#2196F3"/>
            </StackPanel>

            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,20,0,0">
                <Grid x:Name="panelPrincipal">
                    <TextBlock Text="Selecciona una opción del menú lateral"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#757575"/>
                </Grid>
                <!-- CONTENIDO DINÁMICO -->
                
            </Border>
        </Grid>
    </Grid>
</Window>
