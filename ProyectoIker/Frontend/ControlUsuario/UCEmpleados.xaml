<UserControl x:Class="ProyectoIker.Frontend.ControlUsuario.UCEmpleados"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProyectoIker.Frontend.ControlUsuario"
             x:Name="ucEmpleados"
             Loaded="ucEmpleados_Loaded"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock Text="LISTADO DE EMPLEADOS"
                       FontSize="25" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="20"
                       Foreground="Purple"/>
        </Grid>

        <Grid>
            <DataGrid ItemsSource="{Binding listaEmpleados}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      ColumnWidth="*">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="DNI">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Dni}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="NOMBRE" Binding="{Binding}">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="TELEFONO" Binding="{Binding Telefono}"/>
                    <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
