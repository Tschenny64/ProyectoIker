<mah:MetroWindow x:Class="ProyectoIker.Frontend.Dialogos.DialogoProductos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProyectoIker.Frontend.Dialogos"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      x:Name="dialogoProductos"
      Loaded="dialogoProductos_Loaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DialogoProductos"
      Background="Transparent">

        <Grid Margin="30">
            <Border Background="White"
                CornerRadius="10"
                Padding="25"
                MaxWidth="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <StackPanel>

                    <TextBlock Text="Nuevo producto"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>

                    <!-- NOMBRE -->
                    <TextBox materialDesign:HintAssist.Hint="Nombre"
                         x:Name="txtNombreProducto"
                         Text="{Binding producto.Nombre, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,15"/>

                    <!-- DESCRIPCIÓN TÉCNICA -->
                    <TextBox materialDesign:HintAssist.Hint="Descripción técnica"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         x:Name="txtDescripcionTecnicaProducto"
                             Text="{Binding producto.DescripcionTecnica, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                         AcceptsReturn="True"
                         Height="80"
                         TextWrapping="Wrap"
                         Margin="0,0,0,15"/>

                    <!-- PRECIO UNITARIO -->
                    <TextBox materialDesign:HintAssist.Hint="Precio unitario"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         x:Name="txtPrecioUnitarioProducto"
                             Text="{Binding producto.PrecioUnitario, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                             PreviewTextInput="SoloNumeros"
                         Margin="0,0,0,15"/>

                    <!-- CANTIDAD INVENTARIO -->
                    <TextBox materialDesign:HintAssist.Hint="Cantidad en inventario"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         x:Name="txtCantidadInventarioProducto"
                             PreviewTextInput="SoloNumeros"
                             Text="{Binding producto.CantidadInventario, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                         Margin="0,0,0,25"/>

                    <!-- BOTONES -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Cancelar"
                            Style="{StaticResource MaterialDesignFlatButton}"
                                x:Name="btnCancelar"
                                Click="btnCancelarProducto_Click"
                            Margin="0,0,10,0"/>
                        <Button Content="Guardar"
                                x:Name="btnGuardarProducto"
                                Click="btnGuardarProducto_Click"
                            Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </mah:MetroWindow>
